<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.egov.win10.simpelv.list.ListDisposisiMasuk">
    <ImageView
        android:id="@+id/simpel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_screen5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/simpel"
        android:background="#f7ecec"
        android:id="@+id/namaaaa"
        />
    <TextView
        android:text="SiMPEL"
        android:id="@+id/tvSimpel"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#eef2f2"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Dedi Kurniawan, A.Md.T"
        android:gravity="left"
        android:textSize="15dp"
        android:layout_below="@id/tvSimpel"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen5"
        android:id="@+id/tvNamaDM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDisposisiMasuk"
        android:layout_width="match_parent"
        android:layout_below="@id/namaaaa"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
