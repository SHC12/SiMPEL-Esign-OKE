<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/simpel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_screen5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/simpel"
        android:background="#f7ecec"
        android:id="@+id/namaa"
        />
    <TextView
        android:text="SiMPEL"
        android:id="@+id/tvSimpel"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#eef2f2"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Dedi Kurniawan, A.Md.T"
        android:gravity="left"
        android:textSize="15dp"
        android:layout_below="@id/tvSimpel"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen5"
        android:id="@+id/tvNamaPersonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:background="@drawable/bg_btn_secondary"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Keluar"
        android:textColor="@color/white" />
</RelativeLayout>