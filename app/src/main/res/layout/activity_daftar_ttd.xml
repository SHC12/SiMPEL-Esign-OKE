<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TTD.DaftarTTD">
    <ImageView
        android:id="@+id/simpel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_screen5"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/simpel"
        android:background="#f7ecec"
        android:id="@+id/namaaa"
        />
    <TextView
        android:text="SiMPEL"
        android:id="@+id/tvSimpel"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#eef2f2"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Dedi Kurniawan, A.Md.T"
        android:gravity="left"
        android:textSize="15dp"
        android:layout_below="@id/tvSimpel"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="@color/bg_screen5"
        android:id="@+id/tvNamaDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<ScrollView
    android:layout_below="@id/tvNamaDK"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_below="@id/tvNamaDK"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Data Pribadi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cvInformasiSurat"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg_screen5"
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18dp"
                    android:text="NIK"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText

                    android:id="@+id/daftarNikTTD"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:hint="Masukkan NIK "
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:text="Nama"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText

                        android:id="@+id/daftarNamaTTD"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:hint="Masukkan nama tanpa gelar "
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:text="Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/daftarEmailTTD"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:hint="Masukkan email aktif "
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textSize="18dp"
                        android:text="No Telepon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/daftarNoTeleponTTD"
                        android:layout_marginLeft="20dp"
                        android:hint="Masukkan no telepon "
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:text="Data Pekerjaan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView

            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg_screen5"
            android:layout_margin="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:text="NIP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:gravity="center"
                        android:id="@+id/daftarNipTTD"
                        android:layout_marginLeft="20dp"
                        android:hint="Masukkan NIP "
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:text="Jabatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/daftarJabatanTTD"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:hint="Masukkan Jabatan "
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18dp"
                        android:text="Unit Kerja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/daftarUnitKerjakTTD"
                        android:layout_marginLeft="20dp"
                        android:hint="Masukkan Unit Kerja "
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:text="Scan KTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnScanKTP"
                android:layout_marginLeft="20dp"

                android:text="Pilih File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <ImageView
            android:id="@+id/showScanKTP"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:text="Scan Tanda Tangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnImageTTD"
                android:layout_marginLeft="20dp"
                android:text="Pilih File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/showTandaTangan"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:text="Scan Surat Rekomendasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnScanSK"
                android:layout_marginLeft="20dp"
                android:text="Pilih File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDaftarTTD"
            android:text="Daftar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>

</RelativeLayout>